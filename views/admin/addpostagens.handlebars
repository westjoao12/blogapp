{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Nova Postagem: </h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título:</label>
            <input type="text" name="titulo" id="titulo" class="form-control" required>
            <label for="slug">Slug:</label>
            <input type="text" name="slug" id="slug" class="form-control">
            <label for="descricao">Descrição:</label>
            <input type="text" name="descricao" id="descricao" class="form-control">
            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" class="form-control"></textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0" disabled selected>Sem Categorias cadastradas!</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-primary mt-3">Criar Postagem</button>
        </form>
    </div>
</div>