{{/each}}
<h3>Nova categoria:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="POST">
            <label for="nome">Nome:</label>
                <input type="text" name="nome" id="nome" placeholder="Nome da categorias" class="form-control" required>
            <label for="slug">Slug:</label>
                <input type="text" name="slug" id="slug" placeholder="Slug da Categoria" class="form-control" required>
            <button class="btn btn-primary mt-3" type="submit">Cadastrar categorias</button>
        </form>
    </div>
</div>